{
    "Name": "Speed is Life",
    "Description": "Slowest player dies every 20 seconds. Be the last one standing to win./nWith less than 6 players, race to stay above the clock!\nRequired on both Client and Server.",
    "Version": "1.2.1",
    "LoadPriority": 1,
    "RequiredOnClient": true,

    "ConVars":[
        {
            "Name": "sil_mode",
            "DefaultValue": ""
        },
        {
            "Name" : "sil_tac",
            "DefaultValue": "stim"
        }
    ],

    "Scripts": [
        {
            "Path": "gamemodes/sh_gamemode_speedil.nut",
            "RunOn": "( CLIENT || SERVER ) && MP",
            "ClientCallback": {
                "Before": "Sh_GamemodeSpeedIL_Init"
            },
            "ServerCallback": {
                "Before": "Sh_GamemodeSpeedIL_Init"
            }
        },
        {
            "Path": "gamemodes/_gamemode_speedil.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "gamemodes/cl_gamemode_speedil.nut",
            "RunOn": "CLIENT && MP"
        }
    ],
    "Localisation": [
        "resource/speedil_custom_%language%.txt"
    ]
}